<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_step"
        style="@style/TextView.Purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_4dp"
        android:textStyle="bold"
        tools:text="Langkah 1" />

    <TextView
        android:id="@+id/tv_insctruction"
        style="@style/TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        tools:text="Tumis bawang putih cincang sampai harum, masukkan potongan bakwan dan brokoli. Masak hingga matang kurang lebih 5-10 menit s di makan dg potongan cabe. Selamat mencoba" />

</LinearLayout>